<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:SuperSocket.Management.AgentClient.Controls">
    <DataTemplate x:Key="NodeTemplateState">
        <c:CircleProgressBar Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="10"
                    ProgressText="{Binding Path=State, StringFormat='\{0\}...'}">
        </c:CircleProgressBar>
    </DataTemplate>
    <DataTemplate x:Key="NodeTemplateOffline">
        <Grid HorizontalAlignment="Stretch" Height="100">
            <TextBlock Text="Offline" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Style="{StaticResource NodeStatus}"></TextBlock>
        </Grid>
    </DataTemplate>
</ResourceDictionary>